@model List<Movie>
@{
    ViewData["Title"] = "Movies";
}

<div class="container">
    <div class="row align-content-center">
        <div class="col-8">
            <h1>Movies</h1>
        </div>
        <div class="col text-center">
            <a class="btn btn-success" asp-controller="Movie" asp-action="Create">Insert movie</a>
        </div>
        <div class="col text-center">
            <a class="btn btn-success" asp-controller="Movie" asp-action="Sort">Sort List A-Z</a>
        </div>
    </div>
</div>
<table class="table table-striped table-dark">
    <caption>List of movies</caption>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(Model => Model.First().Id)</th>
            <th>@Html.DisplayNameFor(Model => Model.First().Name)</th>
            <th>@Html.DisplayNameFor(Model => Model.First().Release)</th>
            <th>@Html.DisplayNameFor(Model => Model.First().Duration)</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie mv in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => mv.Id)</td>
                <td>@Html.DisplayFor(m => mv.Name)</td>
                <td>@Html.DisplayFor(m => mv.Release)</td>
                <td>@Html.DisplayFor(m => mv.Duration) minutes</td>
                <td>
                    <a asp-action="Details" asp-route-Id="@mv.Id" class="btn btn-info">Details</a>
                    <a asp-action="DeleteView" asp-route-Id="@mv.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="UpdateView" asp-route-Id="@mv.Id" class="btn btn-success">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
