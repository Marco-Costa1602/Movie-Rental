@model Rental


<div class="container" align="center">
    <div class="row col-6" align="center">
        <div class="col-md-12">
            <form asp-action="Update">
                <div class="form-group">
                    <label asp-for="rentedDays" class="control-label"></label>
                    <input asp-for="rentedDays" class="form-control" />
                    <span asp-validation-for="rentedDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="movieId" class="control-label"></label>
                    <select asp-for="movieId" class="form-control" asp-items="@ViewBag.movieList">
                    </select>
                    <span asp-validation-for="movieId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-action="Update" asp-route-Id="@Model.Id" type="submit" value="Update" class="btn btn-success" />
                    <a asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>